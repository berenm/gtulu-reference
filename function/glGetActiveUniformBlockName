gl:
  name: glGetActiveUniformBlockName
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: uniform_block
    name: uniformBlockIndex
    type: GLuint
  - mapping: name.capacity()
    name: bufSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&name[0]'
    name: uniformBlockName
    type: GLchar*
  return: void
gtu:
  name: get_active_uniform_block_name
  params:
  - name: program
    type: gtu::program const
  - name: uniform_block
    type: gtu::uniform_block const
  precall: |
    gtu::size              length = 0;
    std::vector< int32_t > max_length;
    api::get_program(program, cst::active_uniform_block_max_name_length, max_length);
    std::string name(max_length[0] - 1, '\0');
  postcall: |
    name.resize(length);
    return name;
  return: std::string
