gl:
  name: glGetProgramPipelineInfoLog
  params:
  - mapping: pipeline
    name: pipeline
    type: GLuint
  - mapping: info_log.capacity()
    name: bufSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&info_log[0]'
    name: infoLog
    type: GLchar*
  return: void
gtu:
  name: get_program_pipeline_info_log
  params:
  - name: pipeline
    type: gtu::pipeline const
  - name: length
    type: gtu::size&
  - name: info_log
    type: std::string&
  return: void
