gl:
  name: glBindBufferBase
  params:
  - mapping: target
    name: target
    type: GLenum
  - mapping: index
    name: index
    type: GLuint
  - mapping: buffer
    name: buffer
    type: GLuint
  return: void
gtu:
  name: bind_buffer_base
  params:
  - name: target
    type: gtu::constant const
  - name: index
    type: uint32_t const
  - name: buffer
    type: gtu::buffer const
  return: void
