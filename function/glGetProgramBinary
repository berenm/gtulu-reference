gl:
  name: glGetProgramBinary
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: binary.capacity()
    name: bufsize
    type: GLsizei
  - mapping: nullptr
    name: length
    type: GLsizei*
  - mapping: '&binaryFormat'
    name: binaryFormat
    type: GLenum*
  - mapping: '&binary[0]'
    name: binary
    type: void*
  return: void
gtu:
  name: get_program_binary
  params:
  - name: program
    type: gtu::program const
  - name: binaryFormat
    type: gtu::constant&
  - name: binary
    type: std::vector< uint8_t >&
  precall: |
    std::vector< int32_t > length;
    api::get_program(program, cst::program_binary_length, length);
    binary.resize(length[0]);
  return: void
