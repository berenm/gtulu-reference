gl:
  name: glColorPointer
  params:
  - mapping: size
    name: size
    type: GLint
  - mapping: type
    name: type
    type: GLenum
  - mapping: stride
    name: stride
    type: GLsizei
  - mapping: data
    name: pointer
    type: GLvoid const*
  return: void
gtu:
  name: color_pointer
  params:
  - name: size
    type: int32_t const
  - name: type
    type: gtu::constant const
  - name: stride
    type: gtu::size const
  - name: data
    type: gtu::buffer_ref const&
  return: void
