gl:
  name: glUniform4fv
  params:
  - mapping: uniform
    name: location
    type: GLint
  - mapping: values.size()
    name: count
    type: GLsizei
  - mapping: '&values[0][0]'
    name: value
    type: GLfloat const*
  return: void
gtu:
  name: uniform
  params:
  - name: uniform
    type: gtu::uniform const
  - name: values
    type: std::vector< gtu::vec4< float32 > > const&
  return: void
