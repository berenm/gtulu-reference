gl:
  name: glUniform1iv
  params:
  - mapping: uniform
    name: location
    type: GLint
  - mapping: values.size()
    name: count
    type: GLsizei
  - mapping: '&values[0]'
    name: value
    type: GLint const*
  return: void
gtu:
  name: uniform
  params:
  - name: uniform
    type: gtu::uniform const
  - name: values
    type: std::vector< int32_t > const&
  return: void
