gl:
  name: glGetActiveSubroutineUniformName
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: shadertype
    name: shadertype
    type: GLenum
  - mapping: subroutine_uniform
    name: index
    type: GLuint
  - mapping: name.capacity()
    name: bufsize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&name[0]'
    name: name
    type: GLchar*
  return: void
gtu:
  name: get_active_subroutine_uniform_name
  params:
  - name: program
    type: gtu::program const
  - name: shadertype
    type: gtu::constant const
  - name: subroutine_uniform
    type: gtu::uniform const
  precall: |
    gtu::size            length = 0;
    gtu::vec1< int32_t > max_length;
    api::get_program_stage(program, shadertype, cst::active_subroutine_uniform_max_length, max_length);
    std::string name(max_length[0] - 1, '\0');
  postcall: |
    name.resize(length);
    return name;
  return: std::string
