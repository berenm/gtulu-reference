gl:
  name: glGetUniformLocation
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: '&name[0]'
    name: name
    type: GLchar const*
  return: GLint
gtu:
  name: get_uniform_location
  params:
  - name: program
    type: gtu::program const
  - name: name
    type: std::string const&
  return: gtu::uniform
