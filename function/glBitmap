gl:
  name: glBitmap
  params:
  - mapping: dimension[0]
    name: width
    type: GLsizei
  - mapping: dimension[1]
    name: height
    type: GLsizei
  - mapping: xorig
    name: xorig
    type: GLfloat
  - mapping: yorig
    name: yorig
    type: GLfloat
  - mapping: xmove
    name: xmove
    type: GLfloat
  - mapping: ymove
    name: ymove
    type: GLfloat
  - mapping: bitmap
    name: bitmap
    type: GLubyte const*
  return: void
gtu:
  name: bitmap
  params:
  - name: dimension
    type: gtu::vec2< gtu::size > const&
  - name: xorig
    type: float32 const
  - name: yorig
    type: float32 const
  - name: xmove
    type: float32 const
  - name: ymove
    type: float32 const
  - name: bitmap
    type: uint8_t const*
  return: void
