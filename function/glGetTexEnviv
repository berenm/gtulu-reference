gl:
  name: glGetTexEnviv
  params:
  - mapping: target
    name: target
    type: GLenum
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&values[0]'
    name: params
    type: GLint*
  return: void
gtu:
  name: get_tex_env
  params:
  - name: target
    type: gtu::constant const
  - name: property
    type: gtu::constant const
  - name: values
    type: std::vector< int32_t >&
  precall: |
    switch (property) {
      case cst::texture_env_color: values.resize(1); break;
      default:                     values.resize(4); break;
    }
  return: void
