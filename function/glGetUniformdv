gl:
  name: glGetUniformdv
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: location
    name: location
    type: GLint
  - mapping: '&values[0]'
    name: params
    type: GLdouble*
  return: void
gtu:
  name: get_uniform
  params:
  - name: program
    type: gtu::program const
  - name: location
    type: int32_t const
  - name: values
    type: gtu::vec4< float64 >&
  return: void
