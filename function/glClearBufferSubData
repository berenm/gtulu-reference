    type: GLenum
  - mapping: internalformat
    name: internalformat
    type: GLenum
  - mapping: offset
    name: offset
    type: GLintptr
  - mapping: size
    name: size
    type: GLsizeiptr
  - mapping: format
    name: format
    type: GLenum
  - mapping: type
    name: type
    type: GLenum
  - mapping: data
    name: data
    type: void const*
  return: void
