gl:
  name: glProgramUniformMatrix4fv
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: uniform
    name: location
    type: GLint
  - mapping: values.size()
    name: count
    type: GLsizei
  - mapping: transpose
    name: transpose
    type: GLboolean
  - mapping: '&values[0][0][0]'
    name: value
    type: GLfloat const*
  return: void
gtu:
  name: program_uniform
  params:
  - name: program
    type: gtu::program const
  - name: uniform
    type: gtu::uniform const
  - name: transpose
    type: bool const
  - name: values
    type: std::vector< gtu::mat4x4< float32 > > const&
  return: void
