gl:
  name: glGetObjectPtrLabel
  params:
  - mapping: ptr
    name: ptr
    type: void*
  - mapping: label.capacity()
    name: bifSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&label[0]'
    name: label
    type: char*
  return: void
gtu:
  name: get_object_ptr_label
  params:
  - name: ptr
    type: void*
  precall: |
    gtu::size              length = 0;
    std::vector< int32_t > max_length;
    api::get(cst::max_label_length, max_length);
    std::string label(max_length[0] - 1, '\0');
  postcall: |
    label.resize(length);
    return label;
  return: std::string
