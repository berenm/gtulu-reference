gl:
  name: glGetShaderInfoLog
  params:
  - mapping: shader
    name: shader
    type: GLuint
  - mapping: info_log.capacity()
    name: bufSize
    type: GLsizei
  - mapping: nullptr
    name: length
    type: GLsizei*
  - mapping: '&info_log[0]'
    name: infoLog
    type: GLchar*
  return: void
gtu:
  name: get_shader_info_log
  params:
  - name: shader
    type: gtu::shader const
  precall: |
    gtu::vec1< int32_t > length;
    api::get_shader(shader, cst::info_log_length, length);
    std::string info_log(length[0] - 1, '\0');
  postcall: |
    return info_log;
  return: std::string
