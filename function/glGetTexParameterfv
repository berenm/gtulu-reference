gl:
  name: glGetTexParameterfv
  params:
  - mapping: target
    name: target
    type: GLenum
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&params[0]'
    name: params
    type: GLfloat*
  return: void
gtu:
  name: get_tex_parameter
  params:
  - name: target
    type: gtu::constant const
  - name: property
    type: gtu::constant const
  - name: params
    type: std::vector< float32 >&
  precall: |
    switch (property) {
      case cst::texture_swizzle_rgba:
      case cst::texture_border_color:
        params.resize(4);
        break;

      default:
        params.resize(1);
        break;
    }
  return: void
