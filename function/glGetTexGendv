gl:
  name: glGetTexGendv
  params:
  - mapping: coord
    name: coord
    type: GLenum
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&values[0]'
    name: params
    type: GLdouble*
  return: void
gtu:
  name: get_tex_gen
  params:
  - name: coord
    type: gtu::constant const
  - name: property
    type: gtu::constant const
  - name: values
    type: std::vector< float64 >&
  precall: |
    switch (property) {
      case cst::texture_gen_mode: values.resize(1); break;
      default:                    values.resize(4); break;
    }
  return: void
