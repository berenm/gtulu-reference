gl:
  name: glGetProgramiv
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&values[0]'
    name: params
    type: GLint*
  return: void
gtu:
  name: get_program
  params:
  - name: program
    type: gtu::program const
  - name: property
    type: gtu::constant const
  - name: values
    type: std::vector< int32_t >&
  precall: |
    switch (property) {
      case cst::compute_work_group_size: values.resize(3); break;
      default:                           values.resize(1); break;
    }
  return: void
