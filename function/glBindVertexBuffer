gl:
  name: glBindVertexBuffer
  params:
  - mapping: vertex_binding
    name: bindingindex
    type: GLuint
  - mapping: buffer
    name: buffer
    type: GLuint
  - mapping: offset
    name: offset
    type: GLintptr
  - mapping: stride
    name: stride
    type: GLsizei
  return: void
gtu:
  name: bind
  params:
  - name: vertex_binding
    type: gtu::vertex_binding const
  - name: buffer
    type: gtu::buffer const
  - name: offset
    type: std::ptrdiff_t const
  - name: stride
    type: gtu::size const
  return: void
