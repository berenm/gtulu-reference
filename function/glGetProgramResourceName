gl:
  name: glGetProgramResourceName
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: programInterface
    name: programInterface
    type: GLenum
  - mapping: index
    name: index
    type: GLuint
  - mapping: name.capacity()
    name: bufSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&name[0]'
    name: name
    type: char*
  return: void
gtu:
  name: get_program_resource_name
  params:
  - name: program
    type: gtu::program const
  - name: programInterface
    type: gtu::constant const
  - name: index
    type: uint32_t const
  precall: |
    gtu::size            length = 0;
    gtu::vec1< int32_t > max_length;
    api::get_program_interface(program, programInterface, cst::max_name_length, max_length);
    std::string name(max_length[0] - 1, '\0');
  postcall: |
    name.resize(length);
    return name;
  return: std::string
