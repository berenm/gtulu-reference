gl:
  name: glGetActiveAttrib
  params:
  - mapping: program
    name: program
    type: GLuint
  - mapping: vertex_attrib
    name: index
    type: GLuint
  - mapping: std::get< 0 >(vertex_attrib_info).capacity()
    name: bufSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&std::get< 2 >(vertex_attrib_info)'
    name: size
    type: GLint*
  - mapping: '&std::get< 1 >(vertex_attrib_info)'
    name: type
    type: GLenum*
  - mapping: '&std::get< 0 >(vertex_attrib_info)[0]'
    name: name
    type: GLchar*
  return: void
gtu:
  name: get_active_attrib
  params:
  - name: program
    type: gtu::program const
  - name: vertex_attrib
    type: gtu::vertex_attrib const
  precall: |
    gtu::size              length = 0;
    std::vector< int32_t > max_length;
    api::get_program(program, cst::active_attribute_max_length, max_length);
    std::tuple< std::string, gtu::constant, int32_t > vertex_attrib_info = std::make_tuple(std::string(max_length[0] - 1, '\0'), 0, 0);
  postcall: |
    std::get< 0 >(vertex_attrib_info).resize(length);
    return vertex_attrib_info;
  return: std::tuple< std::string, gtu::constant, int32_t >
