gl:
  name: glGetVertexAttribfv
  params:
  - mapping: vertex_attrib
    name: index
    type: GLuint
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&values[0]'
    name: params
    type: GLfloat*
  return: void
gtu:
  name: get_vertex_attrib
  params:
  - name: vertex_attrib
    type: gtu::vertex_attrib const
  - name: property
    type: gtu::constant const
  - name: values
    type: std::vector< float32 >&
  precall: |
    switch (property) {
      case cst::current_vertex_attrib: values.resize(4); break;
      default:                         values.resize(1); break;
    }
  return: void
