gl:
  name: glTexBufferRange
  params:
  - mapping: target
    name: target
    type: GLenum
  - mapping: internal_format
    name: internalFormat
    type: GLenum
  - mapping: buffer
    name: buffer
    type: GLuint
  - mapping: offset
    name: offset
    type: GLintptr
  - mapping: size
    name: size
    type: GLsizeiptr
  return: void
