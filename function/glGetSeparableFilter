gl:
  name: glGetSeparableFilter
  params:
  - mapping: target
    name: target
    type: GLenum
  - mapping: format
    name: format
    type: GLenum
  - mapping: type
    name: type
    type: GLenum
  - mapping: row_data
    name: row
    type: GLvoid*
  - mapping: column_data
    name: column
    type: GLvoid*
  - mapping: span_data
    name: span
    type: GLvoid*
  return: void
gtu:
  name: get_separable_filter
  params:
  - name: target
    type: gtu::constant const
  - name: format
