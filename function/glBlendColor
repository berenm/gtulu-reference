gl:
  name: glBlendColor
  params:
  - mapping: color[0]
    name: red
    type: GLfloat
  - mapping: color[1]
    name: green
    type: GLfloat
  - mapping: color[2]
    name: blue
    type: GLfloat
  - mapping: color[3]
    name: alpha
    type: GLfloat
  return: void
