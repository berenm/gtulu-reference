gl:
  name: glGetSamplerParameteriv
  params:
  - mapping: sampler
    name: sampler
    type: GLuint
  - mapping: property
    name: pname
    type: GLenum
  - mapping: '&values[0]'
    name: params
    type: GLint*
  return: void
gtu:
  name: get_sampler_parameter
  params:
  - name: sampler
    type: gtu::sampler const
  - name: property
    type: gtu::constant const
  - name: values
    type: std::vector< int32_t >&
  precall: |
    switch (property) {
      case cst::texture_border_color: values.resize(4); break;
      default:                        values.resize(1); break;
    }
  return: void
