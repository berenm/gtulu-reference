gl:
  name: glBindSampler
  params:
  - mapping: texture_unit
    name: unit
    type: GLuint
  - mapping: sampler
    name: sampler
    type: GLuint
  return: void
gtu:
  name: bind
  params:
  - name: texture_unit
    type: gtu::texture_unit const
  - name: sampler
    type: gtu::sampler const
  return: void
