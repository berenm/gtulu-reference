gl:
  name: glGetObjectLabel
  params:
  - mapping: identifier
    name: identifier
    type: GLenum
  - mapping: name
    name: name
    type: GLuint
  - mapping: label.capacity()
    name: bifSize
    type: GLsizei
  - mapping: '&length'
    name: length
    type: GLsizei*
  - mapping: '&label[0]'
    name: label
    type: char*
  return: void
gtu:
  name: get_object_label
  params:
  - name: identifier
    type: gtu::constant const
  - name: name
    type: uint32_t const
  precall: |
    gtu::size              length = 0;
    std::vector< int32_t > max_length;
    api::get(cst::max_label_length, max_length);
    std::string label(max_length[0] - 1, '\0');
  postcall: |
    label.resize(length);
    return label;
  return: std::string
